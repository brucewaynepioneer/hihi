{
  "name": "HIHI Bot",
  "description": "A bot that provides IP address transformation based on custom logic.",
  "logo": "https://link-to-logo.com/logo.png",
  "keywords": ["python", "telegram", "bot", "ip", "transform"],
  "repository": "https://github.com/brucewaynepioneer/hihi",  // Replace with the correct URL format for public GitHub repository
  "success_url": "https://example-success-url.com", // Can be any valid URL or remove it if unnecessary
  "env": {
    "API_ID": {
      "description": "Get this value from https://my.telegram.org",
      "value": "your_api_id_here",
      "required": true
    },
    "API_HASH": {
      "description": "Get this value from https://my.telegram.org",
      "value": "your_api_hash_here",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your bot token from @BotFather",
      "value": "your_bot_token_here",
      "required": true
    },
    "MONGO_DB": {
      "description": "Your MongoDB database URL.",
      "value": "your_mongo_db_url_here",
      "required": true
    },
    "OWNER_ID": {
      "description": "The Telegram user ID of the bot owner.",
      "value": "owner_user_id_here",
      "required": true
    },
    "CHANNEL_ID": {
      "description": "ID of the Telegram channel for the bot logs.",
      "value": "your_channel_id_here",
      "required": true
    },
    "LOG_GROUP": {
      "description": "Group ID for logging bot activity.",
      "value": "your_log_group_id_here",
      "required": true
    }
  },
  "buildpacks": [
    { "url": "heroku/python" },
    { "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git" }
  ],
  "stack": "container"
}
